    <form id="file-form" action="process" method="post" enctype="multipart/form-data">
    	<input style="display: none;" id="file-input" type="file" accept="image/*" value="" name="image">
    </form>
    <img style="display: none;" id="tmp-image" src="" alt="">
    <canvas style="display: none;" id="tmp-canvas"></canvas>

    <script type="text/javascript">
        $("#file-input").on("change", function() {
            // $(this).parent().submit();
            var img = document.querySelector('#tmp-image');
            var file = document.querySelector('#file-input').files[0];
            var reader = new FileReader();
            var canvas = document.getElementById('tmp-canvas');

            reader.addEventListener("load", function() {
                img.src = reader.result;
                var MAX_WIDTH = 640;
                var MAX_HEIGHT = 480;
                var width = img.width;
                var height = img.height;

                if (width > height) {
                    if (width > MAX_WIDTH) {
                        height *= MAX_WIDTH / width;
                        width = MAX_WIDTH;
                    }
                } else {
                    if (height > MAX_HEIGHT) {
                        width *= MAX_HEIGHT / height;
                        height = MAX_HEIGHT;
                    }
                }
                img.style.width = width + 'px';
                img.style.height = height + 'px';
                img.width = width;
                img.height = height;
                EXIF.getData(img, function() {
                  var ctx = canvas.getContext("2d");
                  canvas.width = img.width;
                  canvas.height = img.height;
                  ctx.save();

                  var width  = canvas.width;  var styleWidth  = canvas.style.width;
                  var height = canvas.height; var styleHeight = canvas.style.height;
                  // ctx.drawImage(img, 0, 0, width, height);

                    var allMetaData = EXIF.getAllTags(this);
                    if (allMetaData.Orientation > 4) {
                      canvas.width  = height; canvas.style.width  = styleHeight;
                      canvas.height = width;  canvas.style.height = styleWidth;
                    }
                    // alert(JSON.stringify(allMetaData, null, "\t"));
                    // alert(allMetaData.Orientation);
                    switch(allMetaData.Orientation){
                      case 2:
                          // horizontal flip
                          ctx.translate(width, 0);
                          ctx.scale(-1, 1);
                          break;
                      case 3:
                          // 180° rotate left
                          ctx.translate(width, height);
                          ctx.rotate(Math.PI);
                          break;
                      case 4:
                          // vertical flip
                          ctx.translate(0, height);
                          ctx.scale(1, -1);
                          break;
                      case 5:
                          // vertical flip + 90 rotate right
                          ctx.rotate(0.5 * Math.PI);
                          ctx.scale(1, -1);
                          break;
                      case 6:
                          // horizontal flip + 90 rotate right
			  ctx.rotate(0.5 * Math.PI);
                          ctx.translate(0, -height);
                          break;
                      case 7:
   	   	          // horizontal flip + 90 rotate right
 	                  ctx.rotate(0.5 * Math.PI);
                          ctx.translate(canvas.width, -canvas.height);
                          ctx.scale(-1, 1);
                          break;
                      case 8:
                          // 90° rotate left
                          ctx.rotate(-0.5 * Math.PI);
                          ctx.translate(-width, 0);
                          break;
                  }
                  // console.log(img.width, "ss", img.height);
                  ctx.drawImage(img, 0, 0, img.width, img.height);
                  canvas.toBlob(function(blob) {
                      var fd = new FormData();
                      fd.append("image", blob);
                      var xhr = new XMLHttpRequest();
                      xhr.open("POST", "process");
                      xhr.onreadystatechange = function() { //Call a function when the state changes.
                          if (xhr.readyState == XMLHttpRequest.DONE && xhr.status == 200) {
                              window.location.href = 'process/' + JSON.parse(xhr.response).id;
                          }
                      }
                      xhr.send(fd);

                      $('body').delay(350).css({
                          'overflow': 'hidden'
                      });
                      $('#preloader').css("display", "block");
                      $('#preloader').delay(350).fadeIn('slow');
                      $('#status').fadeIn();
                  }, "image/jpeg");
                });


            }, false);

            if (file) {
                reader.readAsDataURL(file);
            }
        });
    </script>

